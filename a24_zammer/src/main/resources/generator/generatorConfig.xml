<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- 引入配置文件 -->
    <properties resource="generator/generator.properties" />

    <context id="context1" targetRuntime="MyBatis3">

        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="${jdbc.driverClassName}"
                        connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}" />

        <!-- 生成Model对象路径配置 -->
        <javaModelGenerator targetPackage="com.jhua.model"
                            targetProject="C:\Users\wb.xiejiehua\IdeaProjects\a24_workspace_springboot\a24_zammer\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 生成sqlXML文件路径配置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="C:\Users\wb.xiejiehua\IdeaProjects\a24_workspace_springboot\a24_zammer\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 生成DAO的类文件路径配置 -->
        <javaClientGenerator targetPackage="com.jhua.dao"
                             targetProject="C:\Users\wb.xiejiehua\IdeaProjects\a24_workspace_springboot\a24_zammer\src\main\java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--要生成哪些表 -->
        <table tableName="zammer_games"></table>
        <table tableName="games_images"></table>
    </context>
</generatorConfiguration>